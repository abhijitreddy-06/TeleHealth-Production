    <style>
        :root {
            /* Color Variables */
            --primary: #38bdf8;
            --primary-hover: #0ea5e9;
            --secondary: #10b981;
            --background: #f9fafb;
            --dark-bg: #1e293b;
            --card-bg: #ffffff;
            --text-dark: #0f172a;
            --text-light: #f1f5f9;
            --text-medium: #475569;
            --border: #e2e8f0;
            --error: #ef4444;
            --warning: #f59e0b;
            --info: #60a5fa;
            --disabled: #9ca3af;
            --footer-bg: #1e293b;
            --success: #22c55e;

            /* Other Variables */
            --transition: all 0.3s ease;
            --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --radius: 12px;
        }

        /* Dark Theme Variables */
        [data-theme="dark"] {
            --background: #1e293b;
            --card-bg: #334155;
            --text-dark: #f1f5f9;
            --text-light: #0f172a;
            --text-medium: #cbd5e1;
            --border: #475569;
            --footer-bg: #0f172a;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", "Inter", "Roboto", sans-serif;
        }

        body {
            background-color: var(--background);
            color: var(--text-dark);
            transition: var(--transition);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            line-height: 1.6;
        }

        /* ================= HEADER & NAVIGATION ================= */
        header {
            background-color: var(--card-bg);
            box-shadow: var(--shadow);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.2rem 5%;
            max-width: 1400px;
            margin: 0 auto;
        }

        .logo {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--primary);
            display: flex;
            align-items: center;
            gap: 0.5rem;
            text-decoration: none;
            font-weight: 700;
            letter-spacing: -0.5px;
        }

        .logo i {
            color: var(--secondary);
            font-size: 1.5rem;
        }

        .logo-text {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 800;
        }

        .nav-links {
            display: flex;
            gap: 2rem;
            align-items: center;
        }

        .nav-links a {
            color: var(--text-dark);
            text-decoration: none;
            font-weight: 500;
            transition: var(--transition);
            padding: 0.5rem 0.8rem;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .nav-links a.active {
            background-color: rgba(56, 189, 248, 0.1);
            color: var(--primary);
        }

        .nav-links a:hover:not(.active) {
            color: var(--primary);
            background-color: rgba(56, 189, 248, 0.1);
        }

        .theme-toggle {
            background: none;
            border: none;
            cursor: pointer;
            color: var(--text-dark);
            font-size: 1.2rem;
            padding: 0.5rem;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: var(--transition);
        }

        .theme-toggle:hover {
            background-color: rgba(56, 189, 248, 0.1);
        }

        /* Mobile Controls */
        .mobile-controls {
            display: none;
            align-items: center;
            gap: 0.5rem;
        }

        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            color: var(--text-dark);
            font-size: 1.5rem;
            cursor: pointer;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            align-items: center;
            justify-content: center;
        }

        .mobile-menu-btn:hover {
            background-color: rgba(56, 189, 248, 0.1);
        }

        /* Mobile Menu */
        .mobile-menu {
            position: fixed;
            top: 0;
            right: -100%;
            width: 280px;
            height: 100vh;
            background-color: var(--card-bg);
            z-index: 1000;
            padding: 2rem;
            transition: var(--transition);
            box-shadow: -5px 0 15px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .mobile-menu.active {
            right: 0;
        }

        .close-menu {
            align-self: flex-end;
            background: none;
            border: none;
            color: var(--text-dark);
            font-size: 1.5rem;
            cursor: pointer;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .close-menu:hover {
            background-color: rgba(56, 189, 248, 0.1);
        }

        .mobile-menu a {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 0.8rem 1rem;
            border-radius: 8px;
            color: var(--text-dark);
            text-decoration: none;
            transition: var(--transition);
        }

        .mobile-menu a:hover,
        .mobile-menu a.active {
            background-color: rgba(56, 189, 248, 0.1);
            color: var(--primary);
        }

        /* ================= MAIN CONTENT ================= */
        main {
            flex: 1;
            padding: 3rem 5%;
            max-width: 1400px;
            margin: 0 auto;
            width: 100%;
        }

        .dashboard-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .dashboard-header h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            color: var(--text-dark);
        }

        .dashboard-header p {
            color: var(--text-medium);
            max-width: 700px;
            margin: 0 auto;
            font-size: 1.1rem;
        }

        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }

        .appointment-card {
            background-color: var(--card-bg);
            padding: 2.5rem;
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            transition: var(--transition);
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .appointment-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .appointment-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .appointment-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
        }

        .appointment-header h2 {
            font-size: 1.8rem;
            color: var(--text-dark);
        }

        .info-group {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .info-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.8rem 0;
            border-bottom: 1px solid var(--border);
        }

        .info-label {
            color: var(--text-medium);
            font-weight: 500;
        }

        .info-value {
            color: var(--text-dark);
            font-weight: 600;
        }

        .status-container {
            margin-top: 1rem;
            padding: 1.5rem;
            border-radius: 8px;
            background-color: rgba(56, 189, 248, 0.1);
            border-left: 4px solid var(--primary);
        }

        .status {
            font-weight: 600;
            font-size: 1.1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .status i {
            font-size: 1.2rem;
        }

        .status.waiting {
            color: var(--warning);
        }

        .status.ready {
            color: var(--success);
        }

        .status.completed {
            color: var(--muted);
        }

        .btn {
            padding: 0.8rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            border: none;
            font-size: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            text-decoration: none;
        }

        .btn-primary {
            background-color: var(--primary);
            color: white;
        }

        .btn-primary:hover:not(:disabled) {
            background-color: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(56, 189, 248, 0.3);
        }

        .btn-primary:disabled {
            background-color: var(--disabled);
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .btn-full {
            width: 100%;
            padding: 1rem;
            margin-top: 1rem;
        }

        /* Instructions Card */
        .instructions-card {
            background-color: var(--card-bg);
            padding: 2.5rem;
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            transition: var(--transition);
        }

        .instructions-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .instructions-card h3 {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            color: var(--text-dark);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .instructions-list {
            display: flex;
            flex-direction: column;
            gap: 1.2rem;
        }

        .instruction-item {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
        }

        .instruction-number {
            min-width: 32px;
            height: 32px;
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .instruction-content h4 {
            margin-bottom: 0.3rem;
            color: var(--text-dark);
        }

        .instruction-content p {
            color: var(--text-medium);
            font-size: 0.95rem;
        }

        /* ================= FOOTER ================= */


        /* Chatbot */
        .chatbot-container {
            position: fixed;
            bottom: 30px;
            right: 30px;
            z-index: 99;
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 15px;
        }

        .chat-bubble {
            background: linear-gradient(to right, var(--primary), var(--secondary));
            color: white;
            padding: 15px 20px;
            border-radius: 20px 20px 0 20px;
            max-width: 250px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            animation: float 4s ease-in-out infinite;
            position: relative;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.3s ease;
        }

        .chat-bubble.active {
            opacity: 1;
            transform: translateY(0);
        }

        .chat-bubble:after {
            content: "";
            position: absolute;
            bottom: -10px;
            right: 0;
            border-width: 10px 0 0 15px;
            border-style: solid;
            border-color: transparent transparent transparent var(--primary);
        }

        .chatbot {
            width: 60px;
            height: 60px;
            background: linear-gradient(to right, var(--primary), var(--secondary));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s;
        }

        .chatbot:hover {
            transform: scale(1.1);
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        /* ================= RESPONSIVE DESIGN ================= */
        @media (max-width: 992px) {
            .dashboard-header h1 {
                font-size: 2.5rem;
            }
        }

        @media (max-width: 768px) {
            .nav-links {
                display: none;
            }

            .mobile-controls {
                display: flex;
            }

            .mobile-menu-btn {
                display: flex;
            }

            .mobile-menu {
                display: flex;
            }

            .chat-bubble {
                max-width: 200px;
            }

            .appointment-card,
            .instructions-card {
                padding: 2rem;
            }
        }

        @media (max-width: 576px) {
            .dashboard-header h1 {
                font-size: 2rem;
            }

            .appointment-header h2 {
                font-size: 1.5rem;
            }

            .btn {
                padding: 0.7rem 1.2rem;
            }

            .navbar {
                padding: 1rem 5%;
            }

            main {
                padding: 2rem 5%;
            }

            .info-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.3rem;
            }
        }

        /* Simple Footer */
        .simple-footer {
            background-color: var(--card-bg);
            border-top: 1px solid var(--border);
            padding: 1.5rem 5%;
            text-align: center;
            margin-top: auto;
        }

        .footer-content {
            max-width: 1400px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 1rem;
        }

        .footer-left {
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }

        .footer-logo {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--primary);
            font-weight: 600;
            text-decoration: none;
        }

        .footer-logo i {
            color: var(--secondary);
            font-size: 1.2rem;
        }

        .copyright {
            color: var(--text-medium);
            font-size: 0.9rem;
        }

        .footer-links {
            display: flex;
            gap: 1.5rem;
            align-items: center;
        }

        .footer-links a {
            color: var(--text-medium);
            text-decoration: none;
            font-size: 0.9rem;
            transition: var(--transition);
        }

        .footer-links a:hover {
            color: var(--primary);
        }

        .footer-links .separator {
            color: var(--border);
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .simple-footer {
                padding: 1rem 5%;
            }

            .footer-content {
                flex-direction: column;
                gap: 0.8rem;
                text-align: center;
            }

            .footer-links {
                flex-wrap: wrap;
                justify-content: center;
                gap: 1rem;
            }

            .separator {
                display: none;
            }

            .footer-links a {
                font-size: 0.85rem;
            }
        }
    </style>
</head>

