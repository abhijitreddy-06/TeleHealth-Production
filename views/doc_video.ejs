    <script defer>
        document.addEventListener('DOMContentLoaded', function () {

        const themeToggle = document.getElementById('themeToggle');
        const html = document.documentElement;

        const savedTheme = localStorage.getItem('theme') || 'dark';
        if (savedTheme) {
            html.setAttribute('data-theme', savedTheme);
            updateThemeIcon(savedTheme);
        }

        function toggleTheme() {
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeIcon(newTheme);
        }

        function updateThemeIcon(theme) {
            const icon = theme === 'dark' ? 'fa-sun' : 'fa-moon';
            themeToggle.innerHTML = `<i class="fas ${icon}"></i>`;
        }

        themeToggle.addEventListener('click', toggleTheme);

        // Character counter for notes
        const notesText = document.getElementById('notesText');
        const charCount = document.getElementById('charCount');

        notesText.addEventListener('input', function () {
            charCount.textContent = this.value.length;
        });

        // Clear notes button
        document.getElementById('clearNotes').addEventListener('click', function () {
            if (confirm('Are you sure you want to clear all notes?')) {
                notesText.value = '';
                charCount.textContent = '0';
            }
        });

        // Save notes button (local save)
        document.getElementById('saveNotes').addEventListener('click', function () {
            const notes = notesText.value;
            if (notes.trim()) {
                localStorage.setItem('consultation_notes_backup', notes);
                alert('Notes saved locally!');
            } else {
                alert('No notes to save.');
            }
        });

        // Load saved notes if any
        const savedNotes = localStorage.getItem('consultation_notes_backup');
        if (savedNotes) {
            notesText.value = savedNotes;
            charCount.textContent = savedNotes.length;
        }

        // Video loading state
        const videoLoading = document.getElementById('videoLoading');

        // Show loading when connecting
        videoLoading.classList.remove('hidden');

        // Hide loading after 2 seconds (in real app, this would be when video connects)
        setTimeout(() => {
            videoLoading.classList.add('hidden');
        }, 2000);

        // Original JavaScript Logic (Unchanged)
        const socket = io();
        const ROOM_ID = "<%= roomId %>";
        const APPOINTMENT_ID = "<%= appointment.id %>";

        let pc, localStream, mic = true, cam = true;
        const start = Date.now();

        setInterval(() => {
            const t = Date.now() - start;
            callTimer.innerText =
                `${String(t / 3600000 | 0).padStart(2, '0')}:${String(t / 60000 % 60 | 0).padStart(2, '0')}:${String(t / 1000 % 60 | 0).padStart(2, '0')}`;
        }, 1000);

        async function init() {
            localStream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
            localVideo.srcObject = localStream;
            socket.emit("join-room", { roomId: ROOM_ID, role: "doctor" });
            videoLoading.classList.add('hidden');
        }
        init();

        function createPeer() {
            pc = new RTCPeerConnection({ iceServers: [{ urls: "stun:stun.l.google.com:19302" }] });
            localStream.getTracks().forEach(t => pc.addTrack(t, localStream));
            pc.ontrack = e => remoteVideo.srcObject = e.streams[0];
            pc.onicecandidate = e => e.candidate && socket.emit("signal", { roomId: ROOM_ID, payload: { candidate: e.candidate } });
        }

        socket.on("user-ready", async () => {
            createPeer();
            const offer = await pc.createOffer();
            await pc.setLocalDescription(offer);
            socket.emit("signal", { roomId: ROOM_ID, payload: { offer } });
        });

        socket.on("signal", async p => {
            if (!pc) createPeer();
            if (p.answer) await pc.setRemoteDescription(p.answer);
            if (p.candidate) await pc.addIceCandidate(p.candidate);
        });

        toggleMic.onclick = () => {
            mic = !mic;
            localStream.getAudioTracks()[0].enabled = mic;
            toggleMic.innerHTML = mic ? '<i class="fas fa-microphone"></i>' : '<i class="fas fa-microphone-slash"></i>';
            toggleMic.classList.toggle('active', mic);
        };

        toggleCam.onclick = () => {
            cam = !cam;
            localStream.getVideoTracks()[0].enabled = cam;
            toggleCam.innerHTML = cam ? '<i class="fas fa-video"></i>' : '<i class="fas fa-video-slash"></i>';
            toggleCam.classList.toggle('active', cam);
        };

        endCall.onclick = async () => {
            // Auto-save notes before ending call
            await fetch("/api/notes/save", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    roomId: ROOM_ID,
                    notes: notesText.value
                })
            });

            await fetch(`/appointments/${APPOINTMENT_ID}/complete`, {
                method: "POST"
            });

            socket.emit("call-ended", { roomId: ROOM_ID });
            location.href = "/doc_video_dashboard";
        };
    });
